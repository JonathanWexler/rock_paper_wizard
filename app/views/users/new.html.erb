<%= content_tag :div, class: 'sign_up_form_img' do -%>
<%= content_tag :div, class: 'sign_up_form_bg' do -%>
<div class="sign_up_box">
<%= form_for @user do |f| %>
<%= f.text_field :email, :class => 'sign_up_form_top', :placeholder => 'Email' %>
<%= f.password_field :password, :class => 'sign_up_form', :placeholder => 'Password' %>
<%= f.submit :create, :class => 'sign_up_create_button', :value => "Sign Up" %>
<%= content_tag :div, class: 'sign_in_button_div' do -%>
<%= link_to("Log In", '/login', method: :get, :class => 'sign_in_button') %>
<% end -%>
</div>
<% end -%>
<% end -%>
<% end %>